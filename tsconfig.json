{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "isolatedModules": false,
    "useDefineForClassFields": false
  },
  "types": [
    "node"
  ],
  "paths": {
    "*": ["*", "src/*"],
    "@/*": ["src/*"]
  },
  "lib": [
    "esnext",
    "dom"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "**/*.ts"
  ]
}
